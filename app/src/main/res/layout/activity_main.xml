<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_victorina"
        android:layout_width="261dp"
        android:layout_height="78dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textColor="#D5D8E4"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="182dp"
        tools:text="Викторина" />

    <Button
        android:id="@+id/btn_literat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/th_literatura"
        app:layout_constraintBottom_toTopOf="@+id/btn_kino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_geogr" />

    <Button
        android:id="@+id/btn_geogr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="24dp"
        android:text="@string/th_geografy"
        app:layout_constraintBottom_toTopOf="@+id/btn_literat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_kino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        android:text="@string/th_kino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_literat" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="54dp"
        android:layout_height="43dp"
        android:background="@drawable/background_info"
        tools:layout_editor_absoluteX="358dp"
        tools:layout_editor_absoluteY="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>